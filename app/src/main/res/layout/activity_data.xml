<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mynotebook.EditActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
      android:id="@+id/toolbar_item" />

    <EditText
        android:id="@+id/field_date"
        android:layout_width="107dp"
        android:layout_height="46dp"
        android:layout_marginStart="85dp"
        android:ems="10"
        android:inputType="date"
        android:layout_marginEnd="86dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"

        android:layout_marginRight="8dp"

        />
    <ImageButton
        android:id="@+id/date_button"
        android:layout_width="57dp"
        android:layout_height="49dp"
        android:layout_marginStart="30dp"
        android:onClick="onClick_imageButton_setDate"
        android:src="@drawable/ic_date_range_black_24dp"
        android:layout_marginEnd="86dp"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
         />

    <TextView
        android:id="@+id/textView"
        android:layout_width="59dp"
        android:layout_height="18dp"
        android:text="Category"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintVertical_bias="0.36" />

    <EditText
        android:id="@+id/field_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Category"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.41000003" />

    <EditText
        android:id="@+id/field_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Content"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/toolbar_item"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.57"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="0.52" />
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:spinnerMode="dropdown"
        android:outlineProvider="paddedBounds"
        android:id="@+id/spinner_show"
        android:entries="@array/Category"
        />



</LinearLayout>
